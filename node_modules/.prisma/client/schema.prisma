generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  sobrenome String
  email     String   @unique
  senha     String
  rua       String
  numero    String
  bairro    String
  cidade    String
  uf        String
  createdAt DateTime @default(now())

  reservas Reserva[]
}

model Reserva {
  id        Int      @id @default(autoincrement())
  data      String
  horario   String
  nome      String
  contato   String
  qtde      Int
  mesa      String
  createdAt DateTime @default(now())

  userId  Int
  usuario Usuario @relation(fields: [userId], references: [id])
}

model Cardapio {
  id        Int    @id @default(autoincrement())
  titulo    String
  descricao String
  preco     Float
  imagem    String
}
